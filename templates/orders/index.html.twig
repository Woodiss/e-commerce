{% extends 'base.html.twig' %}

{% block title %}Hello OrdersController!
{% endblock %}

{% block body %}

    <div class="container">
    

        <h3 style="text-align: center;">HISTORIQUE DE VOS COMMANDES :</h3>
        <div class="container-orders">

            <section class="table">
                <div class="table-head">
                    <div>Date</div>
                    <div>N° commande</div>
                    <div>Montant</div>
                    <div class="statut">Statut</div>
                    <div>Détails</div>
                </div>

                <div class="content-orders">
                    {% for order in orders %}
                        <div class="order">
                            <div>{{ order.createdAt|date("d/m/Y") }}</div>
                            <div>{{ order.reference }}</div>
                            <div>{{ order.total }}</div>
                            <div class="statut">
                                {% set dateLimite = "now"|date_modify("-5 days") %}
                                {% if order.createdAt < dateLimite %}
                                    <span>Commande livré</span>
                                {% else %}
                                    <span>En cours de livraison</span>
                                {% endif %}
                            </div>
                            <div class="{{ order.id }}" onclick="toggle({{ order.id }})">
                                <span>Détails</span>
                                <img class="icons" src="{{ asset('images/images_site/svg_icons/chevron-down.svg') }}" alt="">
                            </div>
                        </div>
                        <div class="id{{ order.id }} all-details">
                            {% for detailorder in order.getOrdersDetails() %}
                                <div class="detail" order-id="">
                                    <img src="{{ asset('images/voyages/' ~ detailorder.getVoyagesid().getImages[0].name) }}" alt="">
                                    <div class="">{{ detailorder.getVoyagesid().littledesc }}</div>
                                    <div>{{ detailorder.quantity }}</div>
                                    <div>{{ detailorder.quantity * detailorder.price }}</div>

                                </div>
                            {% endfor %}
                        </div>
                        
                    {% endfor %}
                </div>
            </section>
        </div>
    </div>
		
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/orders-index.js') }}"></script>
{% endblock %}